<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.poho.stuup.dao.RecDefaultMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.poho.stuup.model.RecDefault">
        <id column="id" property="id"/>
        <result column="grow_id" property="growId"/>
        <result column="student_id" property="studentId"/>
        <result column="remark" property="remark"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <resultMap id="GrowRecordVOMap" type="com.poho.stuup.model.vo.GrowRecordVO">
        <id column="id" property="id"/>
        <result column="first_level_name" property="firstLeveName"/>
        <result column="second_level_name" property="secondLevelName"/>
        <result column="three_level_name" property="threeLevelName"/>
        <result column="grow_name" property="growName"/>
        <result column="create_time" property="createTime"/>
        <result column="create_user" property="createUser"/>
    </resultMap>

    <select id="growthRecordPage" resultMap="GrowRecordVOMap">
        select
        rd.batch_code as id,
        first.name as first_leve_name,
        second.name as second_level_name,
        three.name as three_level_name,
        gi.name as grow_name,
        rd.create_time,
        u.user_name
        from t_rec_default rd
        left join t_growth_item gi
        on gi.id = rd.grow_id
        left join t_growth first on first.id = second.id
        left join t_growth second on second.pid = three.id
        left join t_growth three on three.id = gi.growth_id
        left join t_user u on u.oid = rd.create_user
        group by rd.batch_code
        <where>
            <if test="query.firstLevelId != null and query.firstLevelId != ''">
                and first.id = #{query.firstLevelId}
            </if>
            <if test="query.secondLevelId != null and query.secondLevelId != ''">
                and second.id = #{query.secondLevelId}
            </if>
            <if test="query.threeLevelId != null and query.threeLevelId != ''">
                and three.id = #{query.threeLevelId}
            </if>
            <if test="query.growName != null and query.growName != ''">
                and gi.name like concat('%',#{query.growName},'%')
            </if>
        </where>
    </select>

</mapper>
